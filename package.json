{
  "name": "cdk-autoscaling-instance-refresh",
  "version": "0.1.0",
  "bin": {
    "cdk-autoscaling-instance-refresh": "bin/cdk-autoscaling-instance-refresh.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "format": "prettier --write \"{lib,bin,test}/**/*.ts\"",
    "lint": "eslint lib/** bin/** test/** --ext .ts --no-error-on-unmatched-pattern",
    "deploy": "npx ts-node --prefer-ts-exts script/deploy.ts"
  },
  "devDependencies": {
    "@aws-sdk/credential-providers": "3.624.0",
    "@aws-sdk/client-cloudformation": "3.624.0",
    "@guardian/cdk": "59.2.3",
    "@guardian/eslint-config-typescript": "11.0.0",
    "@guardian/prettier": "8.0.1",
    "@guardian/tsconfig": "1.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "20.14.9",
    "aws-cdk": "2.148.0",
    "aws-cdk-lib": "2.148.0",
    "constructs": "10.3.0",
    "eslint": "8.57.0",
    "eslint-plugin-prettier": "5.2.1",
    "execa": "9.3.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.5.3",
    "source-map-support": "^0.5.21"
  },
  "prettier": "@guardian/prettier",
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "@guardian/eslint-config-typescript"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-inferrable-types": 0,
      "import/no-namespace": 2,
      "prettier/prettier": "error"
    },
    "ignorePatterns": [
      "**/*.js",
      "node_modules",
      "cdk.out",
      ".eslintrc.js",
      "jest.config.js"
    ]
  }
}
